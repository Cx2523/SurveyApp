@model SurveyApp.ViewModels.ClientManagement

@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>
@Html.Partial("_InsertClient")
<table class="table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Zip Code</th>
            <th>Surveys</th>
            <th>Representative</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
        <tr>
            <td>@client.FirstName</td>
            <td>@client.LastName</td>
            <td>@client.Email</td>
            <td>@client.ZipCode</td>
            <td>@client.Surveys</td>
            <td>@client.Owner.Username</td>
            <td><a href="" class="btn btn-warning btn-md margin-right">Edit</a></td>
            <td><a href="@Url.Action("DeleteClient", "Client", new { clientID = client.Id } )" class="btn btn-danger btn-md margin-right">Delete</a></td>
            
        </tr>
        }
    </tbody>
</table>
