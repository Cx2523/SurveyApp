@model SurveyAppClassLibrary.Models.User
@{
    ViewBag.Title = "Index";
}

<h2>Welcome back @Model.Username</h2>
<section>
    <h3>Clients</h3>
    <a href="@Url.Action("Index", "Client", new { user = Model })" class="btn btn-primary btn-xs margin-right">Add</a>
    <table class="table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Zip Code</th>
                <th>Surveys</th>
                <th>Representative</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Email</td>
                    <td>@client.ZipCode</td>
                    <td>@client.Surveys</td>
                    <td>@client.Owner.Username</td>
                    <td><button>Edit</button></td>
                </tr>
            }
        </tbody>
    </table>

</section>

